<% if notice.present? %>
<p><%= notice %></p>
<%end %>

<h1 class="flex justify-center mt-5 text-4xl font-bold ">Recipes</h1>

<div class="flex justify-center ml-[40%] my-10">
  <%= link_to new_recipe_path do %>
    <h2 class="border px-2 py-2"> Add item </h2>
  <% end %>
</div>

<div id="recipes">
  <% @recipes.each do |recipe| %>
    <%= render recipe %>
  <% end %>
</div>

