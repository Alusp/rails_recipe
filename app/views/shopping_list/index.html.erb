  <div class="flex justify-center">
    <div class="w-[35%]">
      <%= link_to recipes_path do %>
        <div class="font-bold mt-4">Back  </div>
      <% end %>
    </div>  
  </div>
<h2 class="flex justify-center mt-8 text-6xl font-bold">Shopping List</h2>
 <% sum = 0 %>
<% count = 0 %>
 <% @shopping_lists.each do |shopping_list| %>
 <% value = shopping_list.quantity * shopping_list.food.price%>
<% sum += value %>
      <% count += 1%>
 <%end%>
<div class="flex justify-center my-20 gap-14">
  <h3 class="text-2xl">Total value  of food needed:   $<%= sum %> </h3>
  <h3 class="text-2xl"> Amount of food: <%= count %></h3>
</div>
<div class="flex justify-center">
  <table class="w-[35%] border">
  <thead class="border-b">
      <tr>
        <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Food</th>
        <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Quantity</th>
        <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Unit Price</th>
        <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">Value</th>
      </tr>
    </thead>
    <tbody>
     <% @shopping_lists.each do |shopping_list| %>
      <tr class="border-b even:bg-slate-50">
        <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= shopping_list.food.name%></td>
        <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= shopping_list.quantity%><%= shopping_list.food.measurement_unit%></td>
        <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">$<%= shopping_list.food.price%></td>
        <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">$<%= shopping_list.quantity * shopping_list.food.price%></td>
      </tr>
    <%end%>
    </tbody>
  </table>
</div>